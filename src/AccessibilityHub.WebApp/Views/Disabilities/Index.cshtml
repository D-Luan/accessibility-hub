@model IEnumerable<AccessibilityHub.WebApp.Dtos.DisabilityDto>

@{
    ViewData["Title"] = "Accessibility Hub";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Accessibility Hub</h1>
    <p>Select a topic below to explore resources.</p>
</div>

<hr />

<div class="row">
    <div class="col-md-3">
        <h3>Disabilities</h3>
        <div class="list-group">
            @foreach (var disability in Model)
            {
                <a asp-controller="Resources" asp-action="Index" asp-route-disabilityId="@disability.Id" class="list-group-item list-group-item-action">
                    @disability.Name
                </a>
            }
        </div>
    </div>

    <div class="col-md-9">
        <h2>Features</h2>
        <p>Key content (such as resources for your selected disability) will appear here in the future.</p>
    </div>
</div>