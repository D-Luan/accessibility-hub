@model IEnumerable<AccessibilityHub.WebApp.Dtos.DisabilityDto>

@{
    ViewData["Title"] = "Accessibility Hub";
}

<div class="text-center">
    <h1 class="display-4">Disabilities Services</h1>
    <p>Select a topic below to explore resources.</p>
</div>

<hr />

<div class="row">
    <div class="col-md-3">
        <h3>Disabilities</h3>
        <div class="list-group">
            @foreach (var disability in Model)
            {
                <a asp-controller="Resource" asp-action="Index" asp-route-disabilityId="@disability.Id" class="list-group-item list-group-item-action">
                    @disability.Name
                </a>
            }
        </div>
    </div>
</div>