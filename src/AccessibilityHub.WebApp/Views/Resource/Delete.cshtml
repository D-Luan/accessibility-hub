@model AccessibilityHub.WebApp.ViewModels.ResourceDetailViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Resource</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resource.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resource.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resource.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resource.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resource.Url)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resource.Url)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resource.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resource.Category)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Resource.Id" />
        <input type="hidden" name="disabilityId" value="@Model.DisabilityId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-route-disabilityId="@Model.DisabilityId">Back to List</a>
    </form>
</div>
